<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlItemMenuHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgmenu_items">

        <TextView
            android:id="@+id/tvTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Nghe Radio, Truyen"
            android:textColor="@color/green"
            android:textSize="@dimen/textview.item.title_menu" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvTxtName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/green" />

    </RelativeLayout>

</RelativeLayout>
